<span id="user-details" data-username="{{cuser.username}}"></span>
<br/>
<div id="ast-container" class="ast-container list-view">
    {{#if groups}}
		{{#each groups}}
            <div class="ctrl-wr-asset" data-groupid="{{id}}">
                <div class="itm-select">
                    <label class="wr-input-control checkbox">
                        <input type="checkbox"/>
                        <span class="helper"></span>
                    </label>
                </div>
                <div class="itm-ast">
                    <div class="ast-img view-group-link" data-groupid="{{id}}">
                        <img class="img-responsive"
                             src='{{url "/extensions/app/store-device-type/themes/store/img/group-icon.png"}}'/>
                    </div>
                    <div class="ast-desc">
                        <div class="ast-title view-group-link" data-groupid="{{id}}">
                            <a class="ast-name">{{name}}</a>
                            <span class="ast-auth">Device Count: {{devices.length}}</span>
                            <span class="ast-auth">Created On: <span class="formatDate">{{dateOfCreation}}</span></span>
                            <span class="ast-ver">Owner: {{owner}}</span>
                            <br/>
                            <span class="ast-ver">Shared with: {{#each users}}{{username}}, {{/each}}</span>
                        </div>
                        <div class="ast-model">
                            <div class="ast-btn-group">
                                <a href="{{url ""}}/pages/devices?groupId={{id}}">
											<span class="fw-stack">
												<i class="fw fw-ring fw-stack-2x"></i>
												<i class="fw fw-devices fw-stack-1x"></i>
											</span>
                                    <span class="lbl-action">Devices</span>
                                </a>
                                <a href="{{url ""}}/pages/analytics?groupId={{id}}&name={{name}}">
											<span class="fw-stack">
												<i class="fw fw-ring fw-stack-2x"></i>
												<i class="fw fw-statistics fw-stack-1x"></i>
											</span>
                                    <span class="lbl-action">Stats</span>
                                </a>
                                <a href="#" class="share-group-link" data-groupid="{{id}}">
											<span class="fw-stack">
												<i class="fw fw-ring fw-stack-2x"></i>
												<i class="fw fw-share fw-stack-1x"></i>
											</span>
                                    <span class="lbl-action">Share</span>
                                </a>
                                <a href="#" class="edit-group-link" data-groupid="{{id}}" data-groupname="{{name}}"
                                   data-groupdescription="{{description}}">
											<span class="fw-stack">
												<i class="fw fw-ring fw-stack-2x"></i>
												<i class="fw fw-edit fw-stack-1x"></i>
											</span>
                                    <span class="lbl-action">Edit</span>
                                </a>
                                <a href="#" class="remove-group-link" data-groupid="{{id}}">
											<span class="fw-stack">
												<i class="fw fw-ring fw-stack-2x"></i>
												<i class="fw fw-delete fw-stack-1x"></i>
											</span>
                                    <span class="lbl-action">Delete</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
		{{/each}}
    {{else}}
        <div id="ast-container" class="ast-container list-view">
            <div class="ctrl-info-panel col-centered text-center wr-login">
                <h2>You don't have any Device Groups at the moment.</h2>
                <br/>
                <p class="text-center">
                    <a href="{{url ""}}/pages/groups/add" class="cu-btn">
                    <span class="fw-stack">
                        <i class="fw fw-ring fw-stack-2x"></i>
                        <i class="fw fw-add fw-stack-1x"></i>
                    </span>
                        Add New Group
                    </a>
                </p>
            </div>
        </div>
    {{/if}}
</div>

