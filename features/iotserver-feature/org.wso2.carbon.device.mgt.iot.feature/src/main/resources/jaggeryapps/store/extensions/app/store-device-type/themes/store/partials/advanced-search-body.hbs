<div class="well asset-well">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 advanced-search-form-container">
                <h1 class="asset-name">Advanced Search</h1>
                <p>Find assets in all asset types.</p>

                <form id="search-form">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name"
                               placeholder="Enter an asset name">
                    </div>
                    <div class="form-group">
                        <label for="mediaType">Provider</label>
                        <input type="text" class="form-control" id="provider" name="provider"
                               placeholder="Provider">
                    </div>
                    <div class="form-group">
                        <label for="mediaType">Version</label>
                        <input type="text" class="form-control" id="version" name="version"
                               placeholder="Version Eg: 1.0.0">
                    </div>
                    <div class="form-group">
                        <label for="mediaType">Lifecycle State</label>
                        <input type="text" class="form-control" id="lcState" name="lcState"
                               placeholder="Lifecycle State">
                    </div>
                    <div class="form-group">
                        <label for="mediaType">Tags</label>
                        <input type="text" class="form-control" id="tags" name="tags"
                               placeholder="Enter a tag">
                    </div>
                    <button id='search-btn' type="submit" class="btn btn-primary">SEARCH</button>
                </form>
            </div>
        </div>
    </div>

</div>

<hr/>
<div>
    <div id='search-results'>
        <div id="search-results-sandbox"></div>
        <div id="search-results-loader"></div>
    </div>
</div>